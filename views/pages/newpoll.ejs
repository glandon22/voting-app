<body>
    <% include ../partials/headerRegistered %>
    <div class="container newpoll">
      <div class="jumbotron">
        <form method="POST" action="/newpoll">
          <div class="form-group">
            <label for="poll-title">Poll Title</label>
            <input type="text" class="form-control" id="poll-title" placeholder="Poll Title" name="poll-title">
          </div>
          <div class="form-group">
            <label for="exampleTextarea">Poll Options</label>
            <textarea class="form-control" id="exampleTextarea" rows="10" name="options" placeholder="Start each unique option on a new line by pressing enter."></textarea>
          </div>
          <button type="submit" class="btn btn-primary pull-right">Submit</button>
        </form>
      </div>
    </div>

    <footer class="footer">
        <% include ../partials/footer %>
    </footer>

